{
  "compilerOptions": {
    "target": "ESNext", // "ESNext" -> bun | "ES2022" -> nodejs
    "module": "ESNext", // "ESNext" -> bun | "NodeNext" -> nodejs
    "moduleResolution": "bundler", // "bundler" -> bun | "NodeNext" -> nodejs
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "lib": ["ESNext"],
    "noEmit": true, // Không build ra file js
    "allowJs": true, // Tắt check file js

    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "esModuleInterop": true, // Giúp import các thư viện CommonJS cũ (như express) dễ dàng hơn
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": true, // tách type

    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts", "dist", "build"]
}
