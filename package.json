{
  "name": "setup-nodejs",
  "module": "server.ts",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/server.ts",
    "start": "bun src/server.ts",
    "db:index": "bun src/utils/sync-indexes.ts",
    "build": "rm -rf dist && bun build ./src/server.ts --outdir ./dist --target node --minify",
    "dev:node": "tsx watch src/server.ts",
    "build:node": "rm -rf dist && tsc && tsc-alias",
    "start:node": "node dist/server.js",
    "db:index:node": "tsx src/utils/sync-indexes.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "prettier": "prettier --check \"src/**/*.ts\"",
    "prettier:fix": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^8.4.0",
    "bcrypt": "^6.0.0",
    "bullmq": "^5.67.3",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.6",
    "dotenv": "^17.2.4",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "file-type": "^21.3.0",
    "formidable": "^3.5.4",
    "ioredis": "^5.9.2",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^9.2.0",
    "ms": "^2.1.3",
    "pino": "^10.3.1",
    "pino-pretty": "^13.1.3",
    "rate-limit-redis": "^4.3.1",
    "sharp": "^0.34.5",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/bcrypt": "^6.0.0",
    "@types/bun": "latest",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/formidable": "^3.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/ms": "^2.1.0",
    "@types/node": "^25.2.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "globals": "^16.5.0",
    "jiti": "^2.6.1",
    "prettier": "^3.8.1",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0"
  }
}
